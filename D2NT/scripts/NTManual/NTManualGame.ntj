var Rev = "0.801B";

function NTMain()
{
	Include("libs/common/NTCommon.ntl");
	NTC_IncludeLibs();

	Include("NTManual/Manual_Game/Variables.ntl");
	MG_LoadConfig();
	CheckMap();

	_checkPlayerTotal();
	MG_InitializeStats();

	if(NTConfig_HostileHandler)
		Load("NTBot/tools/NTHostHandler.ntj");

	RegisterEvent(EVENT_KEYDOWN, NT_KeyEvents);
	RegisterEvent(EVENT_GAMEMSG, MG_GameMsgEvent);

	SetStatusText("Manual Game " + COLOR_8 + Rev + COLOR_4 + " - " + Online);
	Print(COLOR_4 + "NTManualGame " + COLOR_8 + Rev + COLOR_4 + " Loaded");
	var _count = 0;

	while(1)
	{ Delay(Random(300,600));
		ChickenStuff(); Refresh(); MG_AntiIdle();
		if(_count++ > 10) {
			if(MGConfig_AutoParty) { MG_PartyUp(); }
			_count = 0;
		}
	}
}

function MG_PartyUp()
{
	_player = GetPlayerUnit();
	if(!MGConfig_FriendsOnly){
		if(_player) {
			_mypartyid = _player.partyid;
			while(_player.GetNext()) {
				if(_player.partyid == 65535 || _player.partyid != _mypartyid) {
					if(_player.partyflag == 2) {
						me.ClickParty(_player, 2);
						break;
					}
					if(_player.partyid == 65535) {
						if(_player.partyflag == 4)
							break;
						me.ClickParty(_player, 2);
						NTC_Delay(NTC_DELAY_FRAME);
						if(_player.partyflag == 4 || (_player.partyid != 65535 && _player.partyid == _mypartyid))
							break;
					}
				}
			}
		}
	}
	else{
		for(var q = 0; q < MG_SafeList.length; q++){
			if(_player && MG_SafeList.indexOf(_player.name)) {
				_mypartyid = _player.partyid;
				while(_player.GetNext()) {
					if(_player.partyid == 65535 || _player.partyid != _mypartyid) {
						if(_player.partyflag == 2) {
							me.ClickParty(_player, 2);
							break;
						}
						if(_player.partyid == 65535) {
							if(_player.partyflag == 4)
								break;
							me.ClickParty(_player, 2);
							NTC_Delay(NTC_DELAY_FRAME);
							if(_player.partyflag == 4 || (_player.partyid != 65535 && _player.partyid == _mypartyid))
								break;
						}
					}
				}
			}
		}
	} return;
}

function CheckMap()
{
	me.revealautomap = (MGConfig_ShowMap) ? true : false;
	me.showenemyonautomap = (MGConfig_ShowEnemy) ? true : false;
	me.showmissileonautomap = (MGConfig_ShowMissile) ? true : false;
	me.quitonhostile = (MGConfig_RunFromHostile) ? true : false;
}

function NT_KeyEvents(keycode)
{
	switch(keycode) {
		case Key_EnemyOnMap:
			if(MGConfig_ShowEnemy) {
				me.showenemyonautomap = false; MGConfig_ShowEnemy = false;
				Print(COLOR_4 + "Enemy on Automap : " + COLOR_1 + "OFF");
			}
			else {
				me.showenemyonautomap = true; MGConfig_ShowEnemy = true;
				Print(COLOR_4 + "Enemy on Automap : " + COLOR_2 + "ON");
			}
			break;
		case Key_MissileOnMap:
			if(MGConfig_ShowMissile) {
				me.showmissileonautomap = false; MGConfig_ShowMissile = false;
				Print(COLOR_4 + "Missile on Automap : " + COLOR_1 + "OFF");
			}
			else {
				me.showmissileonautomap = true; MGConfig_ShowMissile = true;
				Print(COLOR_4 + "Missile on Automap : " + COLOR_2 + "ON");
			}
			break;
		case Key_AutoParty:
			if(MGConfig_AutoParty) {
				MGConfig_AutoParty = false;
				Print(COLOR_4 + "Auto Party : " + COLOR_1 + "OFF");
			}
			else {
				MGConfig_AutoParty = true;
				Print(COLOR_4 + "Auto Party : " + COLOR_2 + "ON");
			}
			break;
		case Key_PrintRes:
			StackedRes();
			break;
		case Key_PrintFCRPlus:
			FCRPlusPrint();
			break;
		case Key_PrintAbsorbs:
			SorbPrint();
			break;
		case Key_PrintBPs:
			T_BPsPrint();
			break;
		case Key_PrintChicken:
			ChickenValues();
			break;
		case Key_PrintStats:
			NTU_CheckMyStats();
			break;
		case Key_HotKeyInfo:
			Do_KeyHotList();
			Print(COLOR_4 + "Hotkeys sent to manager Common Log!");
			break;
		case Key_ExitGame:
			Print(COLOR_4 + "Calculating stats for game!");
			MG_ComputeStats(false);
			if(ChatREnabled) ClosingChatRLogs();
			if(ItemSInfo) ItemSInfo = false;
			ExitGame();
			break;
		case Key_StashCheck:
			MG_CheckFreeStashSpace(StashChecking);
			break;
		case Key_InvCheck:
			MG_CheckFreeInventorySpace(InvChecking);
			break;
		case Key_KeyCodeCheck:
			if(CheckKeyNumber) {
				CheckKeyNumber = false; Print(COLOR_4 + "Keycode Checker : " + COLOR_1 + "OFF");
			}
			else {
				CheckKeyNumber = true; Print(COLOR_4 + "Keycode Checker : " + COLOR_2 + "ON");
				Print(COLOR_1 + "If you hit a key that is set to do something, you will do that action!");
			}
			break;
		case Key_LoadChatR:
			if(ChatREnabled) {
				ChatREnabled = false;
				Print(COLOR_4 + "Chat Recorder : " + COLOR_1 + "OFF");
				ClosingChatRLogs();
			}
			else {
				ChatREnabled = true;
				Print(COLOR_4 + "Chat Recorder : " + COLOR_2 + "ON");
				OpeningChatRLogs();
			}
		case Key_DoPrecast:
			NTP_DoPrecast(true);
			break;
		case Key_ItemInfos:
			if(ItemSInfo) {
				ItemSInfo = false;
				Print(COLOR_4 + "Item Info: " + COLOR_1 + "OFF");
				ClosingChatRLogs();
			}
			else {
				ItemSInfo = true;
				Print(COLOR_4 + "Item Info: " + COLOR_2 + "ON");
				Print(COLOR_4 + "Type .help for info on commands");
				OpeningChatRLogs();
			}
			break;
		case Key_NextArea:
			//NTAT_AutoForward();
			break;
		case Key_LastArea:
			//NTAT_AutoBackward();
			break;
		case Key_GoToTown:
			HeadingHome();
			break;
		case Key_GameStats:
			MGConfig_EstRun = false;
			MG_ComputeStats(false);
			Print(COLOR_4 + "Current Game Stats sent to Manager!");
			MGConfig_EstRun = true;
			break;
		case Key_AntiIdle:
			if(MGAntiIdle) {
				MGAntiIdle = false;
				Print(COLOR_4 + "AntiIdle " + COLOR_1 + "OFF");
				if(me.gameserverip) Say("Alright, I'm back!");
			}
			else {
				MGAntiIdle = true;
				Print(COLOR_4 + "AntiIdle " + COLOR_2 + "ON");
				if(me.gameserverip) Say("Going AFK, may be a while!");
			}
			break;
		case 17:
			_area = GetArea();
			Print(COLOR_8 + " X=" + me.x + ", Y=" + me.y);
			Print(COLOR_8 + "  In AreaID " + me.areaid + " , " + _area.name);
			break;
		case 48:
			NTU_TLInventory();
			break;
		default:
			if(CheckKeyNumber)
				Print(COLOR_2 + WhichHotKey(keycode) + " / " + keycode);
			break;
	}
}

function _classid(i)
{
	switch(i) {
		case 0:	return "Amazon";
		case 1: return "Sorceress";
		case 2: return "Necromancer";
		case 3: return "Paladin";
