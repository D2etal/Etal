	if(!WarnedMeOnce){
		if(me.hp < parseInt(me.hpmax * MGConfig_LifeChicken,10) / 100) {
			Print(COLOR_1 + "HP" + COLOR_4 + " Chicken attained (" + COLOR_1 + MGConfig_LifeChicken + COLOR_4 + "). Be sure to heal before leaving town!");
